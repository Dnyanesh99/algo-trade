# ============================================================================
# PROCESSING PIPELINE CONTROL VARIABLES
# Core controls for the historical data processing pipeline
# ============================================================================

# Set to 'true' to use enhanced state-aware processing (prevents data duplication)
# Set to 'false' or omit to use original processing pipeline (default)
USE_SMART_PROCESSING=true

# Set to 'true' to force reprocess all data (bypasses state checks)
# Only works when USE_SMART_PROCESSING=true
FORCE_REPROCESS=false

# Set to 'true' to reset all processing state on startup
# Only works when USE_SMART_PROCESSING=true
RESET_PROCESSING_STATE=false

# ============================================================================
# COMPONENT-SPECIFIC PROCESSING CONTROLS
# Enable/disable specific stages of the processing pipeline
# ============================================================================

# Historical data fetching and storage
HISTORICAL_PROCESSING_ENABLED=true

# Data aggregation to higher timeframes (5min, 15min, 60min)
AGGREGATION_PROCESSING_ENABLED=true

# Technical feature calculation
FEATURE_PROCESSING_ENABLED=true

# ML labeling using triple barrier method
LABELING_PROCESSING_ENABLED=true


# Model training for ML prediction
TRAINING_PROCESSING_ENABLED=true


#Distructive Operation Use it with caution
TRUNCATE_ALL_DATA=true
